@model IEnumerable<dotnet_mvc_expense_tracker.Models.Budget>

@{
    ViewData["Title"] = "Master Budget";
}

@section Styles {
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">List Budget</h3>
        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Tambah Data</a>
        </div>
    </div>
    <div class="card-body">
        <table id="budgetTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nama Budget</th>
                    <th>Kategori</th>
                    <th>Total Budget</th>
                    <th>Periode</th>
                    <th>Status</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nama</td>
                        <td>@item.Kategori?.Nama</td>
                        <td>@item.TotalBudget.ToString("C", new System.Globalization.CultureInfo("id-ID"))</td>
                        <td>@item.StartDate.ToString("dd MMM yyyy") - @item.EndDate.ToString("dd MMM yyyy")</td>
                        <td>@item.Status</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Lihat</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Hapus</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#budgetTable").DataTable({ "responsive": true, "lengthChange": false, "autoWidth": false });
        });
    </script>
}