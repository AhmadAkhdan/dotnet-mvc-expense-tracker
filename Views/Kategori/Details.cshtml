@model dotnet_mvc_expense_tracker.Models.Kategori

@{
    ViewData["Title"] = "Detail Kategori";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Detail Kategori: @Model.Nama</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Nama</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nama)</dd>

            <dt class="col-sm-4">Tipe</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipe)</dd>

            <dt class="col-sm-4">Deskripsi</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Deskripsi)</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Kembali ke List</a>
    </div>
</div>